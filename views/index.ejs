<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fast-food Beheersysteem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Extra stijl voor betere UX */
        /*.nav-link.active { font-weight: bold; }
        .table { margin-bottom: 20px; }
        .btn-sm { margin-right: 5px; }*/
    </style>
</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container">
            <a class="navbar-brand" href="#">FastFood Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bestellingen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Instellingen</a>
                    </li>
                </ul>
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#menuModal">
                    + Nieuw Item
                </button>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center mb-4">Menu Beheer</h1>

        <div class="d-flex justify-content-between mb-3">
            <div class="btn-group">
                <button class="btn btn-outline-light active">Alles</button>
                <button class="btn btn-outline-light">Gerechten</button>
                <button class="btn btn-outline-light">Dranken</button>
            </div>
            <div>
                <input type="text" class="form-control" placeholder="Zoek...">
            </div>
        </div>

        <table class="table table-dark table-striped table-hover">
            <thead class="table-secondary">
                <tr>
                    <th width="5%">ID</th>
                    <th>Naam</th>
                    <th>Categorie</th>
                    <th>Prijs</th>
                    <th width="15%">Acties</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>1</th>
                    <td>Hamburger</td>
                    <td><span class="badge bg-primary">Gerecht</span></td>
                    <td>€5.99</td>
                    <td>
                        <button class="btn btn-primary btn-sm edit-btn">Bewerk</button>
                        <button class="btn btn-danger btn-sm">Verwijder</button>
                    </td>
                </tr>
                <tr>
                    <th>2</th>
                    <td>Pizza</td>
                    <td><span class="badge bg-primary">Gerecht</span></td>
                    <td>€8.50</td>
                    <td>
                        <button class="btn btn-primary btn-sm edit-btn">Bewerk</button>
                        <button class="btn btn-danger btn-sm">Verwijder</button>
                    </td>
                </tr>
                <tr>
                    <th>3</th>
                    <td>Cola</td>
                    <td><span class="badge bg-success">Drank</span></td>
                    <td>€2.50</td>
                    <td>
                        <button class="btn btn-primary btn-sm edit-btn">Bewerk</button>
                        <button class="btn btn-danger btn-sm">Verwijder</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Vorige</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Volgende</a>
                </li>
            </ul>
        </nav>
    </div>

    
    <div class="modal fade" id="menuModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Nieuw Menu Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="itemForm" method="POST" action="/menu">


                        <input type="hidden" id="itemId" name="id">
                        
                        <div class="mb-3">
                            <label for="itemName" class="form-label">Naam *</label>
                            <input type="text" class="form-control" id="itemName" name="name" required placeholder="Bijv. Cheeseburger">
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemCategory" class="form-label">Categorie *</label>
                            <select class="form-select" id="itemCategory" name="category" required>
                                <option value="">Selecteer...</option>
                                <option value="gerechten">Gerecht</option>
                                <option value="dranken">Drank</option>
                                <option value="desserts">Dessert</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemPrice" class="form-label">Prijs (€) *</label>
                            <input type="number" class="form-control" id="itemPrice" name="price" min="0" step="0.01" required placeholder="0.00">
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemDesc" class="form-label">Beschrijving</label>
                            <textarea class="form-control" id="itemDesc" name="description" rows="2"></textarea>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="itemAvailable" name="available">
                            <label class="form-check-label" for="itemAvailable">Beschikbaar</label>
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemName" class="form-label">Naam *</label>
                            <input type="text" class="form-control" id="itemName" name="name" required pattern=".{3,}" placeholder="Minimaal 3 tekens">
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemPrice" class="form-label">Prijs (€) *</label>
                            <input type="number" class="form-control" id="itemPrice" name="price" min="0.01" step="0.01" required>
                        </div>

                        <div class="mb-3">
                            <label for="itemDate" class="form-label">Datum & Tijd beschikbaar</label>
                            <input type="datetime-local" class="form-control" id="itemDate" name="available_date">
                          </div>

                        <div class="mb-3">
                            <label for="itemOptions" class="form-label">Kies extra's</label>
                            <select class="form-select" id="itemOptions" name="extras[]" multiple>
                              <option value="kaas">Kaas</option>
                              <option value="spek">Spek</option>
                              <option value="ui">Ui</option>
                              <option value="saus">Extra saus</option>
                            </select>
                        </div>
                          
                        
                    </form>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                    <button type="submit" form="itemForm" class="btn btn-primary">Opslaan</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        
        const menuModal = new bootstrap.Modal(document.getElementById('menuModal'));
        const modalTitle = document.getElementById('modalTitle');
        const itemForm = document.getElementById('itemForm');
        
        
        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                modalTitle.textContent = "Item Bewerken";
               
                document.getElementById('itemId').value = btn.closest('tr').querySelector('th').textContent;
                document.getElementById('itemName').value = btn.closest('tr').querySelector('td:nth-child(2)').textContent;
                menuModal.show();
            });
        });
        
        
        itemForm.addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Item opgeslagen! (Dit zou naar een server gaan)');
            menuModal.hide();
            itemForm.reset();
        });
        
        
        document.querySelectorAll('.btn-danger').forEach(btn => {
            btn.addEventListener('click', () => {
                if (confirm('Weet je zeker dat je dit item wilt verwijderen?')) {
                    btn.closest('tr').remove();
                }
            });
        });
    </script>
</body>
</html>